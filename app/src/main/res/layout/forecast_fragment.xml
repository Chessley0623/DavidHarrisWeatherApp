<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        app:layout_constraintEnd_toStartOf="@+id/guideC2"
        app:layout_constraintStart_toStartOf="@+id/guideC2">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideC2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideH2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.65" />

        <TextView
            android:id="@+id/more_info"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="60sp"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@id/guideH2"
            app:layout_constraintEnd_toStartOf="@id/guideC2" />

        <TextView
            android:id="@+id/that_temp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="60sp"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/guideH2"
            app:layout_constraintStart_toEndOf="@id/guideC2" />

        <View
            android:id="@+id/da_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="99dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>